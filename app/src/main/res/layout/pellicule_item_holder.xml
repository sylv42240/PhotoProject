<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin16"
    android:layout_marginTop="@dimen/margin8"
    android:layout_marginEnd="@dimen/margin16"
    android:layout_marginBottom="@dimen/margin16"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="@dimen/elevationCardView"
    card_view:cardMaxElevation="@dimen/elevationCardView"
    card_view:contentPadding="@dimen/padding8"
    tools:ignore="SpUsage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="">


        <RelativeLayout
            android:id="@+id/mainInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_pellicule_holder">

            <TextView
                android:id="@+id/pellicule_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin8"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textTitle"
                android:textStyle="bold"
                tools:text="@string/pelliculeName" />

            <TextView
                android:id="@+id/iso_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pellicule_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/headerText"
                tools:text="@string/iso" />
        </RelativeLayout>

