<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="@dimen/margin8"
    android:maxHeight="200dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="@dimen/elevationCardView"
    card_view:cardMaxElevation="@dimen/elevationCardView"
    tools:ignore="SpUsage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_pellicule_holder"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mainInformation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding8"
            android:clipToPadding="true"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/pellicule_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin8"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textTitle"
                android:textStyle="bold"
                tools:text="@string/pelliculeName" />

            <TextView
                android:id="@+id/iso_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pellicule_name"
                android:layout_marginTop="@dimen/margin8"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/headerText"
                tools:text="@string/iso" />

            <TextView
                android:id="@+id/photo_time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:text="datedesmes couilles sur un tatami"/>

        </RelativeLayout>


